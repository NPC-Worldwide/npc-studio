{
  "name": "npc-studio",
  "version": "0.0.12",
  "description": "The AI IDE.",
  "author": "Chris Agostino <info@npcworldwi.de>",
  "main": "src/main.js",
  "files": [
    "bin/cli.js",
    "dist/index.html",
    "dist/assets/",
    "src/",
    "assets/icon.png"
  ],
  "scripts": {
    "generate-icons": "electron-icon-builder --input=./assets/icon.png --output=./build",
    "start": "NODE_ENV=development electron .",
    "dev": "vite",
    "build:vite": "vite build",
    "build": "npm run build:vite && electron-builder",
    "preview": "vite preview",
    "rebuild": "electron-rebuild",
    "electron:install-deps": "electron-builder install-app-deps",
    "electron:rebuild": "npx electron-rebuild --module-dir . --which-module sqlite3 --force",
    "electron:build": "electron-builder",
    "pack": "npm run build && npm run electron:build",
    "postinstall": "npm run rebuild"
  },
  "build": {
    "appId": "com.npc_studio.chat",
    "productName": "npc-studio",
    "directories": {
      "buildResources": "assets",
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "src/**/*",
      "package.json",
      "node_modules/sqlite3/**/*",
      "node_modules/sharp/**/*",
      "node_modules/node-pty/**/*"
    ],
    "mac": {
      "icon": "assets/icon.png",
      "extraResources": [
        {
          "from": "resources/backend/npc_studio_serve",
          "to": "backend/npc_studio_serve"
        }
      ]
    },
    "win": {
      "icon": "assets/icon.png",
      "extraResources": [
        {
          "from": "resources/backend/npc_studio_serve.exe",
          "to": "backend/npc_studio_serve.exe"
        } 
      ],
      "extraFiles": [
        {
          "from": "node_modules/electron/dist/icudtl.dat",
          "to": "icudtl.dat"
        }
      ]
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ],
      "category": "Utility",
      "icon": "build/icons",
      "extraResources": [
        {
          "from": "resources/backend/npc_studio_serve",
          "to": "backend/npc_studio_serve"
        }
      ]
    },
    "extraResources": [
      {
        "from": "assets",
        "to": "assets"
      }
    ],
    "asarUnpack": [
      "node_modules/sqlite3/**/*",
      "node_modules/sharp/**/*",
      "node_modules/node-pty/**/*"
    ],
    "buildDependenciesFromSource": false,
    "nodeGypRebuild": false,
    "npmRebuild": false,
    "forceCodeSigning": false
  },
  "dependencies": {
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/lang-python": "^6.2.1",
    "@headlessui/react": "^2.2.0",
    "@lezer/highlight": "^1.2.1",
    "@lucide/lab": "^0.1.2",
    "@react-pdf-viewer/core": "^3.12.0",
    "@react-pdf-viewer/default-layout": "^3.12.0",
    "@react-pdf-viewer/highlight": "^3.12.0",
    "@react-pdf-viewer/selection-mode": "^3.12.0",
    "@supabase/supabase-js": "^2.47.15",
    "@uiw/codemirror-theme-github": "^4.24.1",
    "@uiw/codemirror-theme-vscode": "^4.24.1",
    "@uiw/react-codemirror": "^4.24.1",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/xterm": "^5.5.0",
    "chart.js": "^4.5.0",
    "chartjs-adapter-date-fns": "^3.0.0",
    "d3": "^7.9.0",
    "debounce": "^2.0.0",
    "electron-store": "^10.0.1",
    "install": "^0.13.0",
    "lucide-react": "^0.471.1",
    "node-fetch": "^2.7.0",
    "npm": "^11.3.0",
    "os": "^0.1.2",
    "path": "^0.12.7",
    "react": "^18.3.1",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.3.1",
    "react-force-graph-2d": "^1.28.0",
    "react-markdown": "^9.1.0",
    "react-syntax-highlighter": "^15.6.1",
    "rehype-katex": "^7.0.1",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "sqlite3": "^5.0.11",
    "xterm": "^5.3.0"
  },
  "optionalDependencies": {
    "node-pty": "^1.0.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.7.2",
    "@tailwindcss/typography": "^0.5.16",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "electron": "^25.9.8",
    "electron-builder": "^24.13.3",
    "electron-icon-builder": "^2.0.1",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.18.0",
    "eslint-plugin-react": "^7.37.4",
    "postcss": "^8.5.1",
    "supabase": "^2.6.8",
    "tailwindcss": "^3.4.17",
    "vite": "^6.2.1",
    "vite-plugin-static-copy": "^3.1.1"
  },
  "engines": {
    "node": ">=16"
  }
}